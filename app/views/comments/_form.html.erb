<%= form_with(model: @micropost, local: true) do |f| %>


<div class="field">
  <div class="control">
    <%= f.text_field :comment, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }, style: 'background-color: #000; color: #0F0;'  %>
  </div>
</div>
