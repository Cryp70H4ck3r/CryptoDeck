
<li>
  <% if user.avatar.attached? %>
    <%= image_tag user.avatar, size: 50 %>
  <% else %>
    <%= image_tag('anon_logo.jpg', size: 50) %>
  <% end %>
  <%= link_to user.username, user, class: 'usr_intel_view_box' %>
  <p style="color: #FFF; font-family: 'IBM Plex Serif', serif;">Followers: <%= user.followers.count %> Posts: <%= user.microposts.count %></p>
  <% if current_user.admin?  %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>
