<% provide(:title, @user.username) %>
<div class="container">
    <div class="fb-profile">
        <% if @user.banner.attached? %>
          <%= image_tag @user.banner, class: 'fb-image-lg', alt: 'User Profile Banner' %>
        <% else %>
          <%= image_tag('banner.jpg', class: 'fb-image-lg', alt: 'Profile Banner Image') %>
        <% end %>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'fb-image-profile thumbnail', alt: 'User Profile Image' %>
        <% else %>
          <%= image_tag('anon_logo.jpeg', class: 'fb-image-profile thumbnail', alt: 'Profile Image') %>
        <% end %>
        <div class="fb-profile-text">
          <div class="row" style="background-color: rgba(0,0,0,0.5); border: 3px solid #00F; box-shadow: 5px 5px 7px #00F; padding: 10px;">
            <aside class="col-md-4">
              <section class="stats">
                <%= render 'shared/stats' %>
              </section>
              <%= render 'follow_form' if logged_in? %>
              <% if @user == current_user %>
              <p class="usr_abt_hdr">
                <%= @user.username %>
              </p>
              <section class="micropost_form">
                <%= render 'shared/micropost_form' %>
              </section>
              <% else %>
              <section class="user_info">
                <%= render 'shared/user_info' %>
              </section>
              <% end %>
            </aside>
            <div class="col-md-8">
              <h3 class="pst_feed" style="color: #FFF; font-family: 'Ubuntu', sans-serif; text-shadow: 5px 5px 8px #0F0;">Portal Journals;</h3>
              <%= render 'shared/feed' %>
            </div>

          </div>
        </div>

    </div>

</div>
