<% provide(:title, @user.username) %>
<div class="row">
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <% if @user == current_user %>
        <%= render 'shared/micropost_form' %>
        <% else %>
        <% end %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
</div>
